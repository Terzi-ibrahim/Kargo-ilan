@model List<Kargo_İlan.DTOs.Freight.FreightIndexDto>
<section class="hero-section py-5 bg-light" style="min-height: 50vh;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 mb-4">Kargo İlanlarınızı Yayınlayın</h1>
                <p class="lead mb-4">Türkiye'nin en büyük kargo ilanları platformunda yerinizi alın</p>       

                <form method="get" action="/Freight/Index" class="modern-search-box mt-4">
                    <div class="input-wrapper">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" name="searchText" placeholder="İlan numarası veya başlık ara..." class="modern-input" />
                    </div>

                    <select name="categoryId" class="modern-select">
                        <option value="">Tüm Kategoriler</option>
                        @foreach (var category in ViewBag.Categories as List<CategoryType>)
                        {
                            <option value="@category.Category_id">@category.CategoryName</option>
                        }
                    </select>

                    <button type="submit" class="modern-search-btn">
                        <i class="fas fa-search me-2"></i> Ara
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
<section class="bsb-blog-5 py-3 py-md-5 py-xl-8">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                <h2 class="display-5 mb-4 mb-md-5 text-center">
            Güncel Yükler
                </h2>
                <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
            </div>
        </div>
    </div>

    <div class="container overflow-hidden">
        <div class="row gy-4 gx-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <article class="card border-0 bg-transparent shadow-sm h-100">
                        <figure class="position-relative overflow-hidden mb-3">
                            <a href="@Url.Action("Detail", "Freight", new { id = item.Freight_id, returnUrl = "Home" })" class="d-block">
                                <img src="~/images/foto1.png" alt="@item.Title" loading="lazy" class="img-fluid rounded bsb-scale bsb-hover-scale-up" />
                            </a>




                            <figcaption class="position-absolute top-50 start-50 translate-middle d-flex align-items-center text-white bg-dark bg-opacity-50 rounded px-3 py-2 opacity-0 bsb-hover-fadeIn transition-opacity"
                                        style="pointer-events:none;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-box-seam me-2" viewBox="0 0 16 16">
                                    <path d="M6.5 0.134a1.5 1.5 0 0 1 1 0l6 2.25a.5.5 0 0 1 .325.474v10.284a.5.5 0 0 1-.325.474l-6 2.25a1.5 1.5 0 0 1-1 0l-6-2.25A.5.5 0 0 1 0 13.142V2.858a.5.5 0 0 1 .325-.474l6-2.25zM1 3.057v9.886l5.5 2.063V5.12L1 3.057zm6.5 2.063v9.886l5.5-2.063V3.057L7.5 5.12z" />
                                </svg>
                                <h5 class="mb-0 fw-semibold">Yük Detayı</h5>                              
                            </figcaption>
                        </figure>

                        <div class="card-body px-2">
                            <h4 class="card-title h5 mb-2 text-truncate">
                                <a href="@Url.Action("Detail", "Freight", new { id = item.Freight_id, returnUrl = "Home" })" class="text-primary text-decoration-none">
                                    @item.Title
                                </a>
                            </h4>


                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-secondary text-white small">@item.CategoryType.CategoryName</span>
                            </div>

                            <ul class="list-inline text-muted small mb-0">
                                <li class="list-inline-item">@item.OlusturulmaTarihi.ToString("dd MMM yyyy")</li>
                                <li class="list-inline-item">•</li>
                                <li class="list-inline-item">@item.YuklemeIl.ProvinceName → @item.VarisIl.ProvinceName</li>
                            </ul>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col text-center">
                <a href="/Freight/Index" class="btn bsb-btn-2xl btn-primary rounded-pill mt-5 mt-xl-10">Diğer İlanlar</a>
            </div>
        </div>
    </div>
</section>
    <!-- Features Section -->
    <section class="features-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold mb-3">Platform Özellikleri</h2>
                <p class="text-muted lead">Türkiye'nin en büyük kargo ilan platformunda yerinizi alın</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card h-100 p-4">
                        <div class="card-body text-center">
                            <div class="feature-icon-wrapper mb-4">
                                <div class="feature-icon-bg">
                                    <i class="fas fa-bullhorn"></i>
                                </div>
                            </div>
                            <h4 class="card-title mb-3">Kolay İlan Verme</h4>
                            <p class="card-text text-muted">Dakikalar içinde kargo ilanınızı oluşturun ve binlerce taşıyıcıya ulaşın.</p>
                            <div class="feature-hover-content">
                                <button class="btn btn-outline-primary rounded-pill mt-3" data-bs-toggle="modal" data-bs-target="#ilanVermeModal">
                                    Detaylı Bilgi <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-md-4">
                <div class="feature-card h-100 p-4">
                    <div class="card-body text-center">
                        <div class="feature-icon-wrapper mb-4">
                            <div class="feature-icon-bg">
                                <i class="fas fa-bell"></i>
                            </div>
                        </div>
                        <h4 class="card-title mb-3">Anlık Bildirimler</h4>
                        <p class="card-text text-muted">Yeni teklif, mesaj ya da durum değişikliklerinde anında bilgilendirme alın.</p>
                        <div class="feature-hover-content">
                            <button class="btn btn-outline-primary rounded-pill mt-3" data-bs-toggle="modal" data-bs-target="#bildirimModal">
                                Detaylı Bilgi <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Teklif Verme Sistemi -->
            <div class="col-md-4">
                <div class="feature-card h-100 p-4">
                    <div class="card-body text-center">
                        <div class="feature-icon-wrapper mb-4">
                            <div class="feature-icon-bg">
                                <i class="fas fa-gavel"></i>
                            </div>
                        </div>
                        <h4 class="card-title mb-3">Teklif Verme Sistemi</h4>
                        <p class="card-text text-muted">Lojistik firmaları ilanlara teklif vererek rekabetçi fiyatlarla hizmet sunar.</p>
                        <div class="feature-hover-content">
                            <button class="btn btn-outline-primary rounded-pill mt-3" data-bs-toggle="modal" data-bs-target="#teklifModal">
                                Detaylı Bilgi <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section> 
<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-target="5000">0</h3>
                        <p class="stat-label">Aktif İlan</p>
                    </div>
                    <div class="stat-progress">
                        <div class="progress-ring"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-target="1000">0</h3>
                        <p class="stat-label">Kayıtlı Üye</p>
                    </div>
                    <div class="stat-progress">
                        <div class="progress-ring"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-file-signature"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-target="25000">0</h3>
                        <p class="stat-label">Verilen Toplam Teklif</p>
                    </div>
                    <div class="stat-progress">
                        <div class="progress-ring"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-target="350">0</h3>
                        <p class="stat-label">Toplam Taşıyıcı Firma</p>
                    </div>
                    <div class="stat-progress">
                        <div class="progress-ring"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- İlan Verme Modal -->
<div class="modal fade" id="ilanVermeModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-bullhorn me-2 text-primary"></i>
                    Kolay İlan Verme
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="İlan Verme" class="img-fluid rounded-3 mb-3 mb-md-0">
                    </div>
                    <div class="col-md-6">
                        <h4 class="mb-4">İlan Verme Avantajları</h4>
                        <ul class="feature-list">
                            <li><i class="fas fa-check text-success me-2"></i>Hızlı ve kolay ilan oluşturma</li>
                            <li><i class="fas fa-check text-success me-2"></i>Detaylı ilan seçenekleri</li>
                            <li><i class="fas fa-check text-success me-2"></i>Geniş taşıyıcı ağına erişim</li>
                            <li><i class="fas fa-check text-success me-2"></i>İlan yönetim paneli</li>
                            <li><i class="fas fa-check text-success me-2"></i>İlan istatistikleri</li>
                        </ul>
                        <p class="mt-4">Platformumuzda dakikalar içinde kargo ilanınızı oluşturabilir ve binlerce taşıyıcıya ulaşabilirsiniz.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Anlık Bildirimler Modal -->
<div class="modal fade" id="bildirimModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-bell me-2 text-primary"></i>
                    Anlık Bildirimler
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Bildirimler" class="img-fluid rounded-3 mb-3 mb-md-0">
                    </div>
                    <div class="col-md-6">
                        <h4 class="mb-4">Bildirim Özellikleri</h4>
                        <ul class="feature-list">
                            <li><i class="fas fa-check text-success me-2"></i>Yeni teklif bildirimleri</li>
                            <li><i class="fas fa-check text-success me-2"></i>Mesaj uyarıları</li>
                            <li><i class="fas fa-check text-success me-2"></i>İlan durumu güncellemeleri</li>
                            <li><i class="fas fa-check text-success me-2"></i>Anlık sistem mesajları</li>
                            <li><i class="fas fa-check text-success me-2"></i>Mobil uyumlu bildirimler</li>
                        </ul>
                        <p class="mt-4">İlan ve teklif süreçlerinde her adımdan anlık haberdar olun.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teklif Verme Modal -->
<div class="modal fade" id="teklifModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-gavel me-2 text-primary"></i>
                    Teklif Verme Sistemi
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Teklif Sistemi" class="img-fluid rounded-3 mb-3 mb-md-0">
                    </div>
                    <div class="col-md-6">
                        <h4 class="mb-4">İhale ve Teklif Özellikleri</h4>
                        <ul class="feature-list">
                            <li><i class="fas fa-check text-success me-2"></i>Lojistik firmaları teklif verebilir</li>
                            <li><i class="fas fa-check text-success me-2"></i>Fiyat karşılaştırma imkânı</li>
                            <li><i class="fas fa-check text-success me-2"></i>Rekabetçi pazar ortamı</li>
                            <li><i class="fas fa-check text-success me-2"></i>Kazanan firma seçimi</li>
                            <li><i class="fas fa-check text-success me-2"></i>Geçmiş teklif arşivi</li>
                        </ul>
                        <p class="mt-4">İlan sahipleri gelen teklifleri inceleyerek en uygun hizmet sağlayıcıyı kolayca seçebilir.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
