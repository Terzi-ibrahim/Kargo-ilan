@using System.Security.Claims
@model List<Kargo_İlan.DTOs.Offers.Offers>

@{
    ViewData["Title"] = "Tekliflerim";
    int currentUserId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-truck me-2 text-primary"></i>Tekliflerim</h2>
            <p class="text-muted small mb-0">Tüm tekliflerinizi buradan yönetebilirsiniz</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2 fs-5"></i>
            <span>Henüz hiç teklif bulunmamaktadır.</span>
        </div>
    }
    else
    {
        <div class="accordion" id="offersAccordion">
            @foreach (var offerGroup in Model.GroupBy(o => o.Freight_id))
            {
                var listing = offerGroup.First();
                bool isFreightOwner = listing.FreightOwnerId == currentUserId;
                bool isFirst = Model.GroupBy(o => o.Freight_id).First() == offerGroup;

                <div class="accordion-item border-0 mb-3 shadow-sm rounded">
                    <h2 class="accordion-header" id="heading_@listing.Freight_id">
                        <button class="accordion-button bg-white fw-semibold @(!isFirst ? "collapsed" : "")"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapse_@listing.Freight_id"
                                aria-expanded="@isFirst.ToString().ToLower()"
                                aria-controls="collapse_@listing.Freight_id">
                            <i class="bi bi-box-seam-fill me-2 text-primary"></i>
                            @listing.FreightTitle
                            <small class="text-muted ms-2">#@listing.Freight_id</small>
                        </button>
                    </h2>
                    <div id="collapse_@listing.Freight_id"
                         class="accordion-collapse collapse @(isFirst ? "show" : "")"
                         aria-labelledby="heading_@listing.Freight_id"
                         data-bs-parent="#offersAccordion">
                        <div class="accordion-body bg-white p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th>Teklif No</th>
                                            <th>Fiyat</th>
                                            <th>Açıklama</th>
                                            <th>Tarih</th>
                                            <th>Süre</th>
                                            <th>Durum</th>
                                            <th class="text-center">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var offer in offerGroup)
                                        {
                                            bool isOfferOwner = offer.User_id == currentUserId;
                                            <tr>
                                                <td>@offer.Offer_id</td>
                                                <td class="text-success fw-bold">@offer.Price ₺</td>
                                                <td>@offer.Description</td>
                                                <td>@offer.CreateAt.ToString("dd.MM.yyyy HH:mm")</td>
                                                <td>@offer.RemainingTime</td>
                                                <td>
                                                    @switch (offer.StatusId)
                                                    {
                                                        case 2:
                                                            <span class="badge bg-success">Onaylandı</span>
                                                            ; break;
                                                        case 3:
                                                            <span class="badge bg-danger">Reddedildi</span>
                                                            ; break;
                                                        default:
                                                            if (offer.ExpiryDate < DateTime.UtcNow)
                                                            {
                                                                <span class="badge bg-dark">Süresi Doldu</span>
                                                                ;
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-warning text-dark">Beklemede</span>
                                                                ;
                                                            }
                                                            break;
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center gap-2">
                                                   
                                                        @if (isFreightOwner && offer.StatusId == 1)
                                                        {
                                                            <form asp-action="ConfirmOffer" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="Offer_id" value="@offer.Offer_id" />
                                                                <button class="btn btn-sm btn-success">
                                                                    <i class="bi bi-check-circle me-1"></i>Onayla
                                                                </button>
                                                            </form>
                                                            <form asp-action="RejectOffer" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="Offer_id" value="@offer.Offer_id" />
                                                                <button class="btn btn-sm btn-danger">
                                                                    <i class="bi bi-x-circle me-1"></i>Reddet
                                                                </button>
                                                            </form>
                                                        }
                                                        
                                                        else if (isOfferOwner && offer.StatusId == 1)
                                                        {
                                                            <a asp-action="Update" asp-route-id="@offer.Offer_id" class="btn btn-sm btn-outline-primary">
                                                                <i class="bi bi-pencil-square me-1"></i>Güncelle
                                                            </a>

                                                            <a asp-action="Delete" asp-route-id="@offer.Offer_id" class="btn btn-sm btn-outline-danger">
                                                                <i class="bi bi-trash3-fill me-1"></i>Sil
                                                            </a>
                                                        }
                                                    
                                                        <a asp-action="Details"
                                                           asp-route-id="@offer.Offer_id"
                                                           asp-route-from="Offers"
                                                           class="btn btn-sm btn-outline-dark">
                                                            <i class="bi bi-eye-fill me-1"></i>Detay
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
