@model Kargo_İlan.DTOs.Company.UpdateCompanyUser

@{
    ViewData["Title"] = "Yeni Şirket Kullanıcısı Oluştur";
}

<section class="py-3 py-md-5" style="background-color: whitesmoke;">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                <h2 class="mb-4 display-5 text-center">Yeni Şirket Kullanıcısı Oluştur</h2>
                <p class="text-secondary mb-5 text-center">Yeni bir şirket kullanıcısı oluşturmak için aşağıdaki formu doldurun.</p>
                <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-lg-center">
            <div class="col-12 col-lg-9">
                <div class="bg-white border rounded shadow-sm overflow-hidden">
                    <form asp-action="Create" asp-controller="Company" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row gy-4 gy-xl-5 p-4 p-xl-5">

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Ad" />
                                    <label asp-for="Name">Ad</label>
                                </div>
                                <span asp-validation-for="Name" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Surname" class="form-control" placeholder="Soyad" />
                                    <label asp-for="Surname">Soyad</label>
                                </div>
                                <span asp-validation-for="Surname" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="UserName" class="form-control" placeholder="UserName" />
                                    <label asp-for="UserName">Kullanıcı Adı</label>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email">Email</label>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="PhoneNumber" type="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                                    <label asp-for="PhoneNumber">Telefon Numarası</label>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Address" type="password" class="form-control" placeholder="Address" />
                                    <label asp-for="Address">Adres</label>
                                </div>
                                <span asp-validation-for="Address" class="text-danger small ms-1"></span>
                            </div>                                                 
                            <!-- Buton -->
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-lg text-white" type="submit" style="background-color: #2c3e50;">Kullanıcıyı Güncelle</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


