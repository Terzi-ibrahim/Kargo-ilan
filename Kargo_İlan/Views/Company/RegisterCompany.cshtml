@model Kargo_İlan.DTOs.Account.RegisterCompany
@{
    ViewData["Title"] = "Şirket Oluştur";
}

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <div class="col-12 col-md-6">
                            <img id="slideshowImage"
                                 src="~/images/foto1.png"
                                 class="img-fluid w-100 h-100 object-fit-cover rounded-start"
                                 alt="Giriş Görseli"
                                 style="opacity: 1; transition: opacity 0.5s ease-in-out;">
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-5">
                                                <div class="text-center mb-4">
                                                    <img src="~/images/logo.png" class="rounded-circle" style="width: 128px; height: 128px;" />
                                                </div>
                                                <h2 class="h4 text-center">Şirketimi Oluştur</h2>
                                            </div>
                                        </div>
                                    </div>
                                    <form asp-action="RegisterCompany" method="post">

                                        @Html.AntiForgeryToken()



                                        <div asp-validation-summary="ModelOnly"
                                             class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm"
                                             role="alert"
                                             style="font-size: 0.9rem;">
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                                        </div>





                                        <div class="form-floating mb-3">
                                            <input asp-for="CompanyName" class="form-control" placeholder="Ad" />
                                            <label asp-for="CompanyName">Şirket Adı</label>
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="CompanyPhone" type="tel" class="form-control" placeholder="Telefon Numarası" id="PhoneNumber" maxlength="14" />
                                            <label asp-for="CompanyPhone">Şirket Telefonu</label>
                                            <span asp-validation-for="CompanyPhone" class="text-danger small ms-1"></span>
                                        </div>


                                        <div class="form-floating mb-3">
                                            <input asp-for="CompanyEmail" class="form-control" placeholder="Email" />
                                            <label asp-for="CompanyEmail">Şirket Mail Adresi</label>
                                            <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="TaxNumber"
                                                   class="form-control"
                                                   placeholder="Vergi Numarası"
                                                   maxlength="11"
                                                   pattern="\d{11}"
                                                   title="Vergi Numarası 11 haneli rakamlardan oluşmalıdır."
                                                   oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0,11);" />


                                            <label asp-for="TaxNumber">Şirket Vergi Numarası</label>
                                            <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="CompanyAdress" class="form-control" placeholder="Adres" />
                                            <label asp-for="CompanyAdress">Şirket Adresi</label>
                                            <span asp-validation-for="CompanyAdress" class="text-danger"></span>
                                        </div>

                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-dark btn-lg">Şirketi Oluştur</button>
                                        </div>
                                    </form>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/Account/register.js" asp-append-version="true"></script>

}