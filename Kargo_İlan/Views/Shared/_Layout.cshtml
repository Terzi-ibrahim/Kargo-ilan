@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kargo_İlan</title>



    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/navbars/navbar-1/assets/css/navbar-1.css">
    <link href="~/lib/bs-brain/brain.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />


    @await RenderSectionAsync("Styles", required: false)

</head>
<body>



     <header>
        @if (User.Identity.IsAuthenticated)
        {
            var roles = User.FindAll(ClaimTypes.Role).Select(r => r.Value).ToList();

                          
            if (roles.Contains("Company"))
            {
                @Html.Partial("_NavbarCompany")
            }
        
            else if (roles.Contains("CompanyUser") || roles.Contains("User"))
            {
                @Html.Partial("_NavbarUser")
            }
            else
            {
                @Html.Partial("_Navbar")
            }
        }
        else
        {
            @Html.Partial("_Navbar")
        }

    </header>

 
        @Html.Partial("_MessageBox")
   

        <main role="main" >
            @RenderBody()
        </main>
 
    <footer class="footer" style="background-color: #2c3e50;">
        <div class="container">
            <div class="row align-items-sm-center">
                <div class="col-sm-6 col-xl-3">
                    <a class="navbar-brand d-flex flex-column align-items-center" href="/Home/Index">
                        <img src="~/images/logo.png" alt="Kargo İlan Logo" width="100" height="100" />
                    </a>
                </div>
                <div class="col-sm-6 col-xl-6">
                    <ul class="nav justify-content-center">
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/Index">Anasayfa</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Freight/Index">İlanlar</a></li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-white" href="/Freight/FreightCreate">İlan Oluştur</a>
                            }
                            else
                            {
                                <a class="nav-link text-white" href="/Account/Login">İlan Oluştur</a>
                            }
                        </li>

                        <li class="nav-item"><a class="nav-link text-white" href="/Home/About">Hakkımızda</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/Contact">İletişim</a></li>
                    </ul>
                </div>                
            </div>
            <div class="row">
                <div class="col text-center">
                    &copy; 2025. Tüm Hakları Saklıdır.
                </div>
            </div>
        </div>
    </footer>
   
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>



