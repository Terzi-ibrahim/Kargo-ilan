@{
    Layout = null;
    int code = (int)(ViewData["ErrorCode"] ?? 404);
    string message = (string)(ViewData["ErrorMessage"] ?? "Aradığınız sayfa taşınmış, kaldırılmış veya hiç var olmamış olabilir.");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Error @code</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/livecanvas-team/ninjabootstrap/dist/css/bootstrap.min.css" media="all" />
    @Html.Raw("<script src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js'></script>")
</head>
<body>

    <section class="d-flex align-items-center min-vh-100 py-5">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-md-6 order-md-2">
                    <div class="lc-block">
                        @* İstersen hata koduna göre farklı animasyonlar koyabilirsin *@
                        @if (code == 404)
                        {
                            @Html.Raw("<lottie-player src='https://assets9.lottiefiles.com/packages/lf20_kcsr6fcp.json' background='transparent' speed='1' loop autoplay></lottie-player>")
                        }
                        else if (code == 405)
                        {
                            @Html.Raw("<lottie-player src='https://assets2.lottiefiles.com/packages/lf20_5ngs2ksb.json' background='transparent' speed='1' loop autoplay></lottie-player>")
                        }
                        else
                        {
                            @Html.Raw("<lottie-player src='https://assets10.lottiefiles.com/packages/lf20_j1adxtyb.json' background='transparent' speed='1' loop autoplay></lottie-player>")
                        }
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-start">
                    <div class="lc-block mb-3">
                        <h1 class="fw-bold h4">@message</h1>
                    </div>
                    <div class="lc-block mb-3">
                        <h1 class="display-1 fw-bold text-muted">Error @code</h1>
                    </div>
                    <div class="lc-block mb-5">
                        <p class="rfs-11 fw-light">@message</p>
                    </div>
                    <div class="lc-block">
                        <a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Home")" role="button">ANA SAYFAYA GERİ DÖN</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>
</body>
</html>
