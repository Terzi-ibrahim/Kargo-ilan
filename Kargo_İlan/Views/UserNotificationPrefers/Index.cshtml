@model List<Kargo_İlan.DTOs.UserNotificationPrefs.UserNotificationPrefDto>

<div class="container py-4">

    
   

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 mb-1">Bildirim Tercihleri</h2>
            <p class="text-muted small mb-0">Yeni ilanlar için bildirim tercihlerinizi yönetin</p>
        </div>
        <a asp-action="CreateUserNotificationPref" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Tercih Ekle
        </a>
    </div>

    <!-- Tercihler Listesi -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @foreach (var pref in Model)
            {
                <div class="border-bottom p-4">
                    <!-- Tercih Başlığı -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <span class="badge @(pref.IsActive ? "bg-success" : "bg-secondary")">
                                    @(pref.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </div>
                            <div>
                                <h3 class="h6 mb-1">@pref.YuklemeIlName / @pref.YuklemeIlceName → @pref.VarisIlName / @pref.VarisIlceName</h3>
                                <p class="text-muted small mb-0">Oluşturulma: @pref.CreatedAt.ToLocalTime().ToString("g")</p>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@pref.Id" class="btn btn-sm btn-light">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" asp-action="ToggleNotificationPrefStatus" class="d-inline">
                                <input type="hidden" name="id" value="@pref.Id" />
                                <button type="submit" class="btn btn-sm @(pref.IsActive ? "btn-warning" : "btn-success")">
                                    @(pref.IsActive ? "Pasifleştir" : "Aktifleştir")
                                </button>
                            </form>
                            <a asp-action="Delete" asp-route-id="@pref.Id" class="btn btn-sm btn-light text-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Bildirimler -->
                    @if (pref.Notifications != null && pref.Notifications.Any())
                    {
                        <div class="ms-4">
                            @foreach (var n in pref.Notifications)
                            {
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-bell text-primary me-2"></i>
                                        <span>@n.Message</span>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge @(n.IsRead ? "bg-secondary" : "bg-success")">
                                            @n.CreatedDate.ToLocalTime().ToString("g")
                                        </span>
                                        @if (n.FreightId.HasValue)
                                        {
                                            <a asp-controller="Freight" asp-action="Detail" asp-route-id="@n.FreightId"
                                               asp-route-notificationId="@n.NotificationId"
                                               class="btn btn-sm btn-primary">
                                                İlan Detay
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="ms-4 text-muted small">
                            <i class="fas fa-info-circle me-1"></i>
                            Bu tercih için bildirim bulunmuyor
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
