@model Kargo_İlan.DTOs.UserNotificationPrefs.UserNotificationPrefUpdateViewModel

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 mb-1">Bildirim Tercihi Düzenle</h2>
            <p class="text-muted small mb-0">Bildirim tercihinizi güncelleyin</p>
        </div>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>

    <!-- Form Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="UserNotificationPref.Id" />

                @Html.AntiForgeryToken()


                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm"
                     role="alert"
                     style="font-size: 0.9rem;">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>

                <div class="row g-4">
                    <!-- Yükleme Adresi -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-medium text-primary">
                                <i class="fas fa-map-marker-alt me-2"></i>Yükleme Adresi
                            </label>
                            <select asp-for="UserNotificationPref.Yuklemeil_id" id="loadingCity"
                                    class="form-select" asp-items="ViewBag.Province">
                                <option value="">İl Seçin</option>
                            </select>
                            <span asp-validation-for="UserNotificationPref.Yuklemeil_id" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <select asp-for="UserNotificationPref.Yuklemeilce_id" id="loadingDistrict"
                                    class="form-select" disabled
                                    data-selected-district-id="@Model.UserNotificationPref.Yuklemeilce_id">
                                <option value="">İlçe Seçin</option>
                            </select>
                            <span asp-validation-for="UserNotificationPref.Yuklemeilce_id" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Varış Adresi -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-medium text-primary">
                                <i class="fas fa-map-marker-alt me-2"></i>Varış Adresi
                            </label>
                            <select asp-for="UserNotificationPref.Varisil_id" id="destinationCity"
                                    class="form-select" asp-items="ViewBag.Province">
                                <option value="">İl Seçin</option>
                            </select>
                            <span asp-validation-for="UserNotificationPref.Varisil_id" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <select asp-for="UserNotificationPref.Varisilce_id" id="destinationDistrict"
                                    class="form-select" disabled
                                    data-selected-district-id="@Model.UserNotificationPref.Varisilce_id">
                                <option value="">İlçe Seçin</option>
                            </select>
                            <span asp-validation-for="UserNotificationPref.Varisilce_id" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Aktiflik Durumu -->
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="UserNotificationPref.IsActive" id="isActive" />
                            <label class="form-check-label fw-medium" for="isActive">
                                Bildirim tercihini aktif et
                            </label>
                        </div>
                    </div>

                    <!-- Butonlar -->
                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script id="districts-data" type="application/json">
        @Html.Raw(ViewBag.DistrictsJson)
    </script>
    <script src="~/js/Freight/Helpers/AdressHandler.js" asp-append-version="true"></script>
}
