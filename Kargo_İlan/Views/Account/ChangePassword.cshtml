@model Kargo_İlan.DTOs.Account.ChangePassword

<!-- Login 7 - Bootstrap Brain Component -->
<section class="bg-light p-3 p-md-4 p-xl-5" style="background-color: whitesmoke;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="text-center mb-4">
                                <a href="#!">
                                    <img src="~/images/logo.png" alt="Logo" class="rounded-circle"
                                         style="width: 192px; height:192px; object-fit: cover;">
                                </a>
                                <h4 class="mt-3">Hazırsanız, Şifrenizi Sıfırlayın!</h4>
                            </div>
                        </div>
                        <form asp-action="ChangePassword" asp-controller="Account" method="post">

                            @Html.AntiForgeryToken()


                            <div asp-validation-summary="ModelOnly"
                                 class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm"
                                 role="alert"
                                 style="font-size: 0.9rem;">
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                            </div>


                            <input type="hidden" asp-for="Token" />
                            <div class="row gy-3 overflow-hidden">

                                <!-- Şifre -->
                                <div class="col-12">
                                    <div class="form-floating mb-1 position-relative">
                                        <input asp-for="Password" class="form-control" placeholder="Şifre" id="Password" type="password" />
                                        <label asp-for="Password">Şifre</label>
                                        <i id="togglePassword" class="bi bi-eye-fill text-secondary"
                                           style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;"
                                           title="Şifreyi göster/gizle"></i>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small ms-1"></span>
                                </div>

                                <!-- Şifre Tekrar -->
                                <div class="col-12">
                                    <div class="form-floating mb-1 position-relative">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" id="ConfirmPassword" type="password" />
                                        <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                                        <i id="toggleConfirmPassword" class="bi bi-eye-fill text-secondary"
                                           style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;"
                                           title="Şifreyi göster/gizle"></i>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small ms-1"></span>
                                </div>


                                <!-- Submit -->
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-dark btn-lg" type="submit">Şifrenizi Onaylayın</button>
                                    </div>
                                </div>
                            </div>
                        </form>                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
  
    <script src="~/js/Account/register.js"></script>
}


